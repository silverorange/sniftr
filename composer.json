{
	"name": "silverorange/sniftr",
	"description": "View layer for Tumblr blog content.",
	"type": "library",
	"keywords": [ "tumblr" ],
	"homepage": "https://github.com/silverorange/sniftr",
	"license": "LGPL-2.1",
	"authors": [
		{
			"name": "Michael Gauthier",
			"email": "mike@silverorange.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://composer",
			"options": {
				"ssl": {
					"cafile": "/etc/nginx/tls.crt/composer.crt"
				}
			}
		},
		{
			"packagist": false
		}
	],
	"require": {
		"php": ">=5.3.0",
		"ext-curl": "*",
		"ext-simplexml": "*",
		"silverorange/site": "^5.0.0",
		"silverorange/swat": "^3.0.0"
	},
	"require-dev": {
		"silverorange/coding-standard": "^0.6.0"
	},
	"scripts": {
		"lint": "./vendor/bin/phpcs",
		"post-install-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/silverorange/coding-standard/src",
		"post-update-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/silverorange/coding-standard/src"
	},
	"autoload": {
		"classmap": [ "Sniftr/" ]
	}
}
